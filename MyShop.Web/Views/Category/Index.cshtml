@model IEnumerable<Category>
@{
    ViewData["Title"]="";
}

<h1>Categories List </h1>

<table class="table">
    <tr>
        <td>Name</td>
        <td>Description</td>
        <td>Date Created</td>
    </tr>
    @foreach(var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Description</td>
            <td>@item.CreatedTime</td>
           
            <td>
                <a class="btn btn-success"  asp-action="Edit" asp-route-id="@item.Id">
                 Edit
                </a>  
                <a class="btn btn-danger"  asp-action="Edit" asp-route-id="@item.Id">
                 Delete
                </a>
            </td>
        </tr>
    }
</table>