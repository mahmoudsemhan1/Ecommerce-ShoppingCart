<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Shopping Cart</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <link href="~/css/shoppingcart.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <div class="shopping-cart-container">
            <div class="cart-header d-flex justify-content-between align-items-center">
                <h4 class="mb-0">Shopping Cart</h4>
                <a class="btn btn-primary" asp-area="" asp-controller="Home" asp-action="Index">Continue Shopping</a>
            </div>

            @foreach (var item in Model.CartItemsList)
            {
                <div class="cart-item">
                    <img src="/@item.Product.Img" alt="photo">
                    <div class="cart-item-info">
                        <h5>@item.Product.Name</h5>
                        <p>@item.Product.Description</p>
                    </div>
                    <div class="cart-item-controls  d-flex align-items-center">
                        <div class="row">
                        <span>@item.Product.Price.ToString("C")</span>
                        <span>x @item.Quantity</span>
                        </div>
                        <div>
                            <a class="btn btn-secondary btn-sm" asp-controller="Cart" asp-action="Plus" asp-route-CartItemId="@item.CartItemId">
                            <i class="fas fa-plus"></i>
                        </a>
                            <a class="btn btn-secondary btn-sm" asp-controller="Cart" asp-action="Minus" asp-route-CartItemId="@item.CartItemId">
                            <i class="fas fa-minus"></i>
                        </a>
                            <a class="btn btn-danger btn-sm" asp-controller="Cart" asp-action="Minus">
                            <i class="fas fa-trash"></i>
                        </a>
                        </div>
                    </div>
                </div>
            }
            <div class="cart-total mt-4">
                <div class="total-amount w-100">
                    <h5>Total (USD)</h5>
                    <h5>
                        @Model.TotalCarts.ToString("C")
                    </h5>
                </div>
            </div>

        </div>
        <div class="d-flex  justify-content-end m-2 ">
            <a class="btn btn-primary">Summary</a>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
