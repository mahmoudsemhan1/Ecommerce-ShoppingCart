@model ShoppingCartVM
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Billing and Shopping Cart</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .btn-continue, .btn-back {
            margin-top: 10px;
        }

        .cart-item img {
            width: 50px; /* Adjust image size to 50px width */
            height: auto;
        }

        .cart-summary {
            background-color: #f8f9fa;
            border: 1px solid #dee2e6;
            padding: 15px;
            border-radius: 5px;
            position: relative;
        }

            .cart-summary img {
                max-width: 100%; /* Ensure the image scales correctly */
                height: auto;
            }

            .cart-summary .edit-link {
                position: absolute;
                top: 15px;
                right: 15px;
                font-size: 14px;
                color: #007bff;
            }
    </style>
</head>
<body>
    <div class="container mt-5">
        <div class="row">
            <!-- Form -->
            <div class="col-md-12">
                <form method="post">
                    <div class="row">
                        <!-- Billing Form -->
                        <div class="col-md-6 billing-address">
                            <h2>Billing Address</h2>
                            <div class="container mt-4">
                                <div class="row">
                                    <!-- Name Field -->
                                    <div class="form-group col-12">
                                        <label for="name">Name</label>
                                        <input type="text" class="form-control" asp-for="@Model.OrderHeader.ApplicationUser.Name">
                                        <span asp-validation-for="OrderHeader.ApplicationUser.Name" class="text-danger"></span>
                                    </div>

                                    <!-- Email Field -->
                                    <div class="form-group col-12">
                                        <label for="email">Email</label>
                                        <input type="email" class="form-control" id="email" asp-for="@Model.OrderHeader.ApplicationUser.Email">
                                        <span asp-validation-for="OrderHeader.ApplicationUser.Email" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="row">
                                    <!-- Phone Number Field -->
                                    <div class="form-group col-md-6">
                                        <label for="phone">Phone Number</label>
                                        <input type="text" class="form-control" id="phone" asp-for="@Model.OrderHeader.Phone">
                                        <span asp-validation-for="OrderHeader.Phone" class="text-danger"></span>
                                    </div>
                                    <!-- Address Field -->
                                    <div class="form-group col-md-6">
                                        <label for="address">Address</label>
                                        <input type="text" class="form-control" id="address" asp-for="@Model.OrderHeader.Address">
                                        <span asp-validation-for="OrderHeader.Address" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="row">
                                    <!-- City Field -->
                                    <div class="form-group col-md-6">
                                        <label for="city">City</label>
                                        <input type="text" class="form-control" asp-for="@Model.OrderHeader.City">
                                        <span asp-validation-for="OrderHeader.City" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Shopping Cart Summary -->
                        <div class="col-md-6">
                            <div class="cart-summary">
                                <h2>Cart Summary <a href="#" class="edit-link">Edit</a></h2>

                                @foreach (var item in Model.CartItemsList)
                                {
                                    <div class="cart-item d-flex justify-content-between mb-3 align-items-center">
                                        <div class="d-flex align-items-center">
                                            <img src="/@item.Product.Img" alt="Product Image" class="cart-item-img img-fluid">
                                            <div class="ml-3">
                                                <h5 class="mb-1">@item.Product.Name</h5>
                                            </div>
                                        </div>
                                        <span class="product-price">@item.Product.Price.ToString("C")</span>
                                    </div>
                                }

                                <hr>
                                <div class="d-flex justify-content-between total-row">
                                    <h5>Total (USD)</h5>
                                    <h5>@Model.TotalCarts.ToString("C")</h5>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-success btn-continue">Place Order</button>
                            <button type="button" class="btn btn-secondary btn-back">Back to Shopping</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
