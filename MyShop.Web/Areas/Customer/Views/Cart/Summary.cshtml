<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Billing and Shopping Cart</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">

</head>
<body>
    <div class="container mt-5">
        <div class="row">
            <!-- Billing Form -->
            <div class="col-md-6 billing-address">
                <h2>Billing Address</h2>
                <form>
                    <div class="form-group">
                        <label for="name">Name</label>
                        <input type="text" class="form-control" id="name" placeholder="David Smith" value="David Smith">
                    </div>
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="email" class="form-control" id="email" placeholder="david.343@gmail.com" value="david.343@gmail.com">
                    </div>
                    <div class="form-row">
                        <div class="form-group col">
                            <label for="phone">Phone Number</label>
                            <input type="text" class="form-control" id="phone" placeholder="(123) 456-7890">
                        </div>
                        <div class="form-group col">
                            <label for="address">Address</label>
                            <input type="text" class="form-control" id="address" placeholder="123 Main St">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="name">Address</label>
                        <input type="text" class="form-control" id="name"  >
                    </div>
                    <div class="form-check">
                        <input type="checkbox" class="form-check-input" id="sameAsBilling">
                        <label class="form-check-label" for="sameAsBilling">Shipping address is same as billing</label>
                    </div>
                </form>
            </div>

            <!-- Shopping Cart Summary -->
            <div class="col-md-6">
                <div class="cart-summary">
                    <h2>Cart Summary <a href="#" class="edit-link">Edit</a></h2>

                    <div class="d-flex justify-content-between">
                        <div>Subtotal</div>
                        <div>$80.9</div>
                    </div>
                    <div class="d-flex justify-content-between">
                        <div>Shipping</div>
                        <div>$12.9</div>
                    </div>
                    <hr />
                    <div class="d-flex justify-content-between total-row">
                        <div>Total</div>
                        <div>$92.98</div>
                    </div>
                </div>

                <button type="button" class="btn btn-success btn-continue">Continue to Shopping</button>
                <button type="button" class="btn btn-secondary  btn-continue">Back to Shopping</button>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
