@model IEnumerable<Category>
@{
    ViewBag.PageTitle = "Category Managment";
    ViewBag.CardTitle = "List Of Category";
    Layout = "_AdminLayout";
}
<div class="m-3">
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</div>
<table class="table">
    <tr>
        <td>Name</td>
        <td>Description</td>
        <td>Date Created</td>
        <td>Actions</td>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Description</td>
            <td>@item.CreatedTime</td>

            <td>
                <a class="btn btn-success" asp-action="Edit" asp-route-id="@item.Id">
                    Edit
                </a>
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">
                    Delete
                </a>
            </td>
        </tr>
    }
</table>
@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
        @if (TempData["Create"] != null)
        {
            <text>
                    toastr.success("@TempData["Create"]");
            </text>
        }
        @if (TempData["Update"] != null)
        {
            <text>
                    toastr.info("@TempData["Update"]");
            </text>
        }
        @if (TempData["Delete"] != null)
        {
            <text>
                    toastr.error("@TempData["Delete"]");
            </text>
        }
                });
    </script>
}
