@model Category
@{
    ViewBag.PageTitle = "Category Managment";
    ViewBag.CardTitle = "Delete Category";
}


<div class="rom">
    <div class="col-md-4">
        <form method="post" asp-area="Admin" asp-controller="Category" asp-action="DeleteCategory">
            <input hidden asp-for="Id" />
            <div class="mb-3">
                <label asp-for="Name"></label>
                <input asp-for="Name" disabled class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Description"></label>
                <input asp-for="Description" disabled class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>

            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-danger">Delete</button>
            </div>
        </form>
    </div>
</div>
<div >
    <a href="/Admin/Category/Index" class="btn btn-secondary"> Back To Index</a>
</div>
@section Scripts {
    <partial name="_validationscriptspartial" />
}