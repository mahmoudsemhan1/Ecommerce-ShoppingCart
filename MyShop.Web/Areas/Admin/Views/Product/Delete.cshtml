@model ProductVm
@{
    ViewBag.PageTitle = "Product Managment";
    ViewBag.CardTitle = "Delete Product";
    Layout = "_AdminLayout";
}
<div class="rom">
    <div class="col-md-6">
        <form method="post" asp-area="Admin" asp-controller="Product" asp-action="DeleteProduct">
            <input hidden asp-for="Product.Id" />
            <div class="mb-3">
                <label asp-for="Product.Name"></label>
                <input asp-for="Product.Name" disabled class="form-control" />
                <span asp-validation-for="Product.Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Product.Description"></label>
                <input asp-for="Product.Description" disabled class="form-control" />
                <span asp-validation-for="Product.Description" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Product.Price"></label>
                <input asp-for="Product.Price" disabled class="form-control" />
                <span asp-validation-for="Product.Price" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Product.category.Name"></label>
                <input asp-for="Product.category.Name" disabled class="form-control" />
                <span asp-validation-for="Product.category.Name" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <div class="text-center">
                    <img id="ImagePreview" src="/@Model.Product.Img" ) alt="Product Image" width="300px" height="300" class="img-fluid" />
                </div>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-danger">Delete</button>
            </div>
        </form>
    </div>
</div>
<div>
    <a href="/Admin/Product/Index" class="btn btn-secondary"> Back To Index</a>
</div>
@section Scripts {
    <partial name="_validationscriptspartial" />
}